<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>All Customers</title>
  </head>
  <body class="container">
  <h1>All Specialities of Tony Salon</h1>
  <hr>
  @if (@Model.Count != 0)
  {
    <h3>All Specialties:</h3>
      <hr>
      <ul>
        @foreach(var specialty in Model) {
          <li>Name: <a href="/SpecialtyDetails/@specialty.GetId()"> @specialty.GetName() </a></li>
          <hr>
        }
      </ul>
  }
  else
  {
    <h3>We don't have any Specialities of your Salon yet, please add!</h3>
  }
  <a href="/InsertSpecialty"><button type='submit' class='btn'>Add stylist</button></a><br>
  <a href="/"><button type='submit' class='btn'>Go Home</button></a><br>
</body>
</html>
